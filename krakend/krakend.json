{
  "$schema": "https://www.krakend.io/schema/v2.9/krakend.json",
  "version": 3,
  "name": "KrakenD API Gateway",
  "port": 8081,
  "timeout": "3s",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "extra_config": {
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "stdout": true
    },
    "router": {
      "return_error_msg": true,
      "logger_skip_paths": [
        "/health"
      ]
    }
  },
  "endpoints": [
    {
      "endpoint": "/http/data",
      "method": "GET",
      "output_encoding": "json",
      "input_query_strings": ["*"],
      "backend": [
        {
          "url_pattern": "/api/data",
          "encoding": "json",
          "method": "GET",
          "host": ["http://http-service:8000"],
          "disable_host_sanitize": false,
          "extra_config": {
            "qos/ratelimit/proxy": {
              "max_rate": 10000,
              "capacity": 10000
            }
          }
        }
      ]
    },
    {
      "endpoint": "/health",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/health",
          "encoding": "json",
          "method": "GET",
          "host": ["http://http-service:8000"],
          "disable_host_sanitize": false
        }
      ]
    }
  ]
}