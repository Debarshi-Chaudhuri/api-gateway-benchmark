{
  "$schema": "https://www.krakend.io/schema/v2.9/krakend.json",
  "version": 3,
  "name": "KrakenD API Gateway",
  "port": 8081,
  "timeout": "3s",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "extra_config": {
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "stdout": true
    },
    "telemetry/metrics": {
      "collection_time": "60s",
      "proxy_disabled": false,
      "router_disabled": false,
      "backend_disabled": false,
      "endpoint_disabled": false,
      "listen_address": ":8090"
    },
    "router": {
      "return_error_msg": true,
      "logger_skip_paths": [
        "/health",
        "/metrics"
      ]
    },
    "security/cors": {
      "allow_origins": ["*"],
      "allow_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allow_headers": ["Origin", "Authorization", "Content-Type"],
      "expose_headers": ["Content-Length"],
      "max_age": "12h"
    },
    "qos/ratelimit/router": {
      "max_rate": 100,
      "client_max_rate": 10,
      "strategy": "ip"
    }
  },
  "endpoints": [
    {
      "endpoint": "/http/data",
      "method": "GET",
      "output_encoding": "json",
      "input_query_strings": ["*"],
      "backend": [
        {
          "url_pattern": "/api/data",
          "encoding": "json",
          "method": "GET",
          "host": ["http://http-service:8000"],
          "disable_host_sanitize": false,
          "extra_config": {
            "qos/circuit-breaker": {
              "interval": 120,
              "timeout": 30,
              "max_errors": 10,
              "log_level": "error"
            },
            "qos/ratelimit/proxy": {
              "max_rate": 50,
              "capacity": 1
            }
          }
        }
      ],
      "extra_config": {
        "qos/ratelimit/endpoint": {
          "max_rate": 100,
          "client_max_rate": 10,
          "strategy": "ip"
        }
      }
    },
    {
      "endpoint": "/http/protected",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/protected",
          "encoding": "json",
          "method": "GET",
          "host": ["http://http-service:8000"],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {}
    },
    {
      "endpoint": "/health",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/health",
          "encoding": "json",
          "method": "GET",
          "host": ["http://http-service:8000"],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/grpc/data",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/service.DataService/GetData",
          "encoding": "json",
          "method": "POST",
          "host": ["http://krakend-grpc-gateway:8090"],
          "disable_host_sanitize": false,
          "extra_config": {
            "qos/circuit-breaker": {
              "interval": 120,
              "timeout": 30,
              "max_errors": 10,
              "log_level": "error"
            },
            "qos/ratelimit/proxy": {
              "max_rate": 50,
              "capacity": 1
            }
          }
        }
      ],
      "input_headers": ["Content-Type"]
    },
    {
      "endpoint": "/grpc/protected",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/service.DataService/GetProtectedData",
          "encoding": "json",
          "method": "POST",
          "host": ["http://krakend-grpc-gateway:8090"],
          "disable_host_sanitize": false
        }
      ],
      "input_headers": ["Content-Type"],
      "extra_config": {}
    }
  ]
}